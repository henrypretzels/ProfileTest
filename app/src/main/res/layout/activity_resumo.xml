<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ResumoActivity">

    <TextView
        android:id="@+id/textViewTitleResumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resumo das Informações"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textViewLabelNomeCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo:"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitleResumo"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorNomeCompleto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nome do Usuário Aqui"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelNomeCompleto"
        app:layout_constraintStart_toEndOf="@id/textViewLabelNomeCompleto"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLabelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelNomeCompleto"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="email@exemplo.com"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelEmail"
        app:layout_constraintStart_toEndOf="@id/textViewLabelEmail"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLabelRua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rua:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelEmail"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorRua"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nome da Rua, 123"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelRua"
        app:layout_constraintStart_toEndOf="@id/textViewLabelRua"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLabelCidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cidade:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelRua"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorCidade"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Nome da Cidade"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelCidade"
        app:layout_constraintStart_toEndOf="@id/textViewLabelCidade"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLabelNewsletter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Newsletter:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelCidade"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorNewsletter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Sim/Não"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelNewsletter"
        app:layout_constraintStart_toEndOf="@id/textViewLabelNewsletter"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewLabelTemaApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tema:"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewLabelNewsletter"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewValorTemaApp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Claro/Escuro"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/textViewLabelTemaApp"
        app:layout_constraintStart_toEndOf="@id/textViewLabelTemaApp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonEditarPerfil"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVertical"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/buttonFinalizarResumo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guidelineVertical"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
